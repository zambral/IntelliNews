<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@android:color/white"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_loading_header_textview"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:padding="20dp"/>

    <RelativeLayout
        android:layout_below="@id/layout_loading_header_textview"
        android:id="@+id/layout_loading_loader"
        android:layout_centerHorizontal="true"
        android:layout_width="240dp"
        android:layout_height="128dp">

        <ImageView
            android:id="@+id/layout_loading_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:src="@mipmap/ic_cloud_black_48dp"
            android:tint="@color/colorPrimary" />

        <ProgressBar
            android:id="@+id/layout_loading_progressbar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_marginTop="8dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:theme="@style/ProgressCircleWhite" />
    </RelativeLayout>


    <TextView
        android:id="@+id/layout_loading_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_loading_loader"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black"
        android:visibility="gone" />

    <Button
        android:id="@+id/layout_loading_reload_button"
        style="@style/Button.AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_loading_textview"
        android:layout_centerHorizontal="true"
        android:paddingEnd="40dp"
        android:paddingStart="40dp"
        android:text="@string/reload"
        android:visibility="gone" />

</RelativeLayout>