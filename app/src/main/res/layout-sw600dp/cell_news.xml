<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="256dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/cell_news_imageview"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/news" />

    <TextView
        android:id="@+id/cell_news_title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cell_news_imageview"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Lorem ipsum" />

    <TextView
        android:id="@+id/cell_news_desc_texview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/cell_news_title_textview"
        android:layout_alignRight="@id/cell_news_title_textview"
        android:layout_below="@id/cell_news_title_textview"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="12sp"
        android:textStyle="italic"
        tools:text="Lorem ipsum" />

</RelativeLayout>